<h1>Type of available space</h1>

<ul>
  <% ['window ledge', 'balcony', 'terrace'].each do |space| %>
  <li>
    <%= space %>
  </li>
  <% end %>
</ul>

<%= form_for @garden do |form| %>
  <%= form.radio_button :category, "window" %>
  <%= form.label :category_window, "Window" %>
  <%= form.radio_button :category, "balcony" %>
  <%= form.label :category_balcony, "Balcony" %>
  <%= form.radio_button :category, "terrace" %>
  <%= form.label :category_terrace, "Terrace" %>
<% end %>

<h2>What are the dimensions?</h2>
      <form>
        <div class='form-group'>
          <label for='Garden width'>Width</label>
         <input type='text' class='form-control' id='formGroupExampleInput' placeholder='Width'>
        </div>
        <div class='form-group'>
          <label for='Garden length'>Length</label>
          <input type='text' class='form-control' id='formGroupExampleInput2' placeholder='Length'>
        </div>
      </form>

<div id="box" style="background:#B45F04;height:100px;width:100px;margin:6px;"></div>

<%= link_to "Next step", next_wizard_path %>
