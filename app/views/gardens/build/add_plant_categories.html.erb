<div class="container pt-3 pb-5">
  <div class="row">
    <%= render "shared/loader", step: 4, class: "m-5" %>
    <div class="col-sm-12 pt-5">
       <div class="row">
        <h2 class="pb-3">What plants do you want to grow?</h2>
            <%= form_with model: @garden, url: wizard_path, method: :put do |f| %>
              <div class="row choose-plants">
                <% Plant::CATEGORY.each do |elem| %>
                  <div class="col-6 text-center">
                    <input type="checkbox" name="garden[plant_categories][]" class='check' value="<%= elem %>" id="<%= elem %>">
                    <label class="" for="<%= elem %>">
                      <%= image_tag Plant::IMAGE_PLANT_CATEGORY[elem.to_sym], class: 'img-fluid' %>
                      <p class="pt-3"><%= elem %></p>
                    </label>
                  </div>
                <% end %>
                <div class="text-center">
              <%= f.submit "Generate your garden!", class:"button"%>
            <% end %>
            </div>
      </div>
    </div>
  </div>
</div>
