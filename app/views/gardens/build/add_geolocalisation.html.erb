<div class="container pt-3 pb-5" data-controller="location" id="map2">

	<h2>Let's find your geolocation!</h2>
  <p class="pb-3">So we can determine your climate.</p>
	<div id="map" data-location-target="map"></div>
  <p>latitude: <span data-location-target="lat"></span></p>
  <p>longitude: <span data-location-target="lng"></span></p>

  <div class="d-flex justify-content-center align-items-center">
    <%= link_to 'Submit', next_wizard_path, class: 'btn btn-secondary btn-lg text-center ', id: "lol" %>
  </div>

  <div class="progress mt-5" id="loading-bar">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success bg-success" role="progressbar" style="width: 50%; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">50%</div>
  </div>
</div>
