<%= simple_form_for @garden, url: wizard_path, method: :put do |f| %>
  <%= f.input :exposure, collection: Garden::EXPOSURE %>
  <%= f.submit "Pick exposure", class: 'btn btn-secondary btn-lg' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1>Geolocalisation</h1>
      <form>
        <div class="form-group">
          <label for="formGroupExampleInput2">Let's locate yourself!</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Enter your city!">
        </div>
      </form>

      <div class="pb-6">
        <img class="pt-5"src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTtKLsBiK1v3TvKge4uB2UZdPQh1Yzk3jNGZQ&usqp=CAU" class="img-fluid pt-5">
        <h2 class="">Let's find your exposure!</h2>
        <img class=""src="https://www.geniushomes.co.nz/hs-fs/hubfs/Website%20Assets/2018%20Website%20Images/Large%20Homes/NOVA/Nova%20-%20Floor%20Plan%20(1)%20-%20Compressed.jpg?width=770&name=Nova%20-%20Floor%20Plan%20(1)%20-%20Compressed.jpg">
      </div>


      <button type="button" class="btn btn-secondary btn-lg mt-3"><%= link_to "Previous step", previous_wizard_path  %></button>
      <button type="button" class="btn btn-secondary btn-lg mt-3"><%= link_to "Next step", next_wizard_path %></button>
    </div>
  </div>
  <div class="progress mt-5">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success bg-success" role="progressbar" style="width: 50%; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">50%</div>
</div>
