
<%= render "shared/loader", step: 3, class:"mt-5" %>
<div class="container pt-3 pb-5">
  <h2 class="pb-3">Let's find your exposure!</h2>
  <div data-controller="compass" data-action="deviceorientationabsolute@window->compass#update" class="d-flex justify-content-center">
    <%= simple_form_for @garden, url: wizard_path, method: :put do |f| %>
   </div>


    <div class="fixed-bottom d-flex justify-content-center align-items-end pb-5">
        <%= f.input :exposure, input_html: { data: {compass_target: "input" } }%>
        <%= f.submit "Pick exposure", class: 'btn btn-secondary btn-lg ',id: "lol" %>
        <% end %>

    </div>


    <div  class="compass">
      <div class="arrow"></div>
      <div class="compass-circle"></div>
      <div  data-compass-target= "compassCircle" class="my-point" id="compass2"></div>
    </div>
</div>
