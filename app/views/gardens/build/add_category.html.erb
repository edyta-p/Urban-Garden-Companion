<%= simple_form_for @garden, url: wizard_path, method: :put do |f| %>
  <%= f.input :category, collection: Garden::CATEGORY %>

      <h2 class="pt-3">What are the dimensions?</h2>
        <div class="form-group">
          <%= f.input :width, placeholder: 'cm' %>
        </div>
        <div class="form-group">
          <%= f.input :length, placeholder: 'cm' %>

        </div>



    <div class="h-75"style="background-color: black;">
      <head>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <meta charset="utf-8">
      </head>
        <body>
          <button id="btn1"> Length & Width</button>
          <button id="btn2">Reset</button>
          <div id="box" style="background:#B45F04;height:100px;width:100px;margin:6px;"></div>
        </body>

      <%= f.submit "Next step", class: 'btn btn-secondary btn-lg' %>
      <% end %>
    </div>

    <div class="progress mt-3">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success bg-success" role="progressbar" style="width: 25%; border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">25%</div>
  </div>
